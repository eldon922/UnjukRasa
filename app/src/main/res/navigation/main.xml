<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigationMain"
    app:startDestination="@id/mainScreen">

    <fragment
        android:id="@+id/mainScreen"
        android:name="com.pedulinegeri.unjukrasa.MainFragment"
        android:label="Menu Utama"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/actionMainScreenToNavigationNewDemonstrationPage"
            app:destination="@id/newDemonstrationPageFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/wait_anim"
            app:popEnterAnim="@anim/wait_anim"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/actionMainScreenToSignUpPageFragment"
            app:destination="@id/signUpPageFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/wait_anim"
            app:popEnterAnim="@anim/wait_anim"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/actionMainScreenToEditProfilePageFragment"
            app:destination="@id/editProfilePageFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/wait_anim"
            app:popEnterAnim="@anim/wait_anim"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/actionMainScreenToSearchPageFragment"
            app:destination="@id/searchPageFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/wait_anim"
            app:popEnterAnim="@anim/wait_anim"
            app:popExitAnim="@anim/to_right" />
    </fragment>

    <fragment
        android:id="@+id/signUpPageFragment"
        android:name="com.pedulinegeri.unjukrasa.auth.SignUpPageFragment"
        android:label="fragment_sign_up_page"
        tools:layout="@layout/fragment_sign_up_page" />

    <fragment
        android:id="@+id/newDemonstrationPageFragment"
        android:name="com.pedulinegeri.unjukrasa.new_demonstration.NewDemonstrationPageFragment"
        android:label="fragment_new_demonstration_page"
        tools:layout="@layout/fragment_new_demonstration_page" />

    <fragment
        android:id="@+id/demonstrationPageFragment"
        android:name="com.pedulinegeri.unjukrasa.demonstration.DemonstrationPageFragment"
        android:label="fragment_demonstration_page"
        tools:layout="@layout/fragment_demonstration_page">
        <action
            android:id="@+id/actionDemonstrationPageFragmentToAddProgressPageFragment"
            app:destination="@id/addProgressPageFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/wait_anim"
            app:popEnterAnim="@anim/wait_anim"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/actionDemonstrationPageFragmentToNavigationProfilePage"
            app:destination="@id/navigationProfilePage"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/wait_anim"
            app:popEnterAnim="@anim/wait_anim"
            app:popExitAnim="@anim/to_right">
            <argument
                android:name="userUID"
                app:argType="string" />
        </action>
        <action
            android:id="@+id/actionDemonstrationPageFragmentToNavigationLoginPage"
            app:destination="@id/navigationLoginPage"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/wait_anim"
            app:popEnterAnim="@anim/wait_anim"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/actionDemonstrationPageFragmentToParticipateBottomSheetDialog"
            app:destination="@id/participateBottomSheetDialog" />
        <action
            android:id="@+id/actionDemonstrationPageFragmentToPersonListBottomSheetDialog"
            app:destination="@id/personListBottomSheetDialog" />
        <argument
            android:name="id"
            android:defaultValue="0"
            app:argType="string" />
        <action
            android:id="@+id/actionDemonstrationPageFragmentToEditDemonstrationPageFragment"
            app:destination="@id/editDemonstrationPageFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/wait_anim"
            app:popEnterAnim="@anim/wait_anim"
            app:popExitAnim="@anim/to_right" />
        <deepLink
            android:id="@+id/deepLink"
            app:uri="unjukrasa.com/{id}" />
    </fragment>

    <fragment
        android:id="@+id/addProgressPageFragment"
        android:name="com.pedulinegeri.unjukrasa.demonstration.progress.AddProgressPageFragment"
        android:label="AddProgressPageFragment"
        tools:layout="@layout/fragment_add_progress_page">
        <argument
            android:name="demonstrationId"
            app:argType="string" />
        <argument
            android:name="progressSize"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/editProfilePageFragment"
        android:name="com.pedulinegeri.unjukrasa.setting.EditProfilePageFragment"
        android:label="EditProfilePageFragment" />

    <fragment
        android:id="@+id/searchPageFragment"
        android:name="com.pedulinegeri.unjukrasa.search.SearchPageFragment"
        android:label="SearchPageFragment">
        <action
            android:id="@+id/actionSearchPageFragmentToNewDemonstrationPageFragment"
            app:destination="@id/newDemonstrationPageFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/wait_anim"
            app:popEnterAnim="@anim/wait_anim"
            app:popExitAnim="@anim/to_right"
            app:popUpTo="@+id/mainScreen" />
    </fragment>

    <include app:graph="@navigation/profile_page" />
    <include app:graph="@navigation/login_page" />

    <dialog
        android:id="@+id/participateBottomSheetDialog"
        android:name="com.pedulinegeri.unjukrasa.demonstration.ParticipateBottomSheetDialog"
        android:label="ParticipateBottomSheetDialog">
        <argument
            android:name="date"
            app:argType="string" />
        <argument
            android:name="time"
            app:argType="string" />
        <argument
            android:name="location"
            app:argType="string" />
        <argument
            android:name="demonstrationId"
            app:argType="string" />
    </dialog>

    <dialog
        android:id="@+id/personListBottomSheetDialog"
        android:name="com.pedulinegeri.unjukrasa.demonstration.person.PersonListBottomSheetDialog"
        android:label="personListBottomSheetDialog">
        <argument
            android:name="typeList"
            app:argType="com.pedulinegeri.unjukrasa.demonstration.person.PersonListBottomSheetDialog$TypeList" />
        <action
            android:id="@+id/actionPersonListBottomSheetDialogToNavigationProfilePage"
            app:destination="@id/navigationProfilePage"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/wait_anim"
            app:popEnterAnim="@anim/wait_anim"
            app:popExitAnim="@anim/to_right">
            <argument
                android:name="userUID"
                app:argType="string" />
        </action>
        <argument
            android:name="demonstrationId"
            app:argType="string" />
    </dialog>

    <dialog
        android:id="@+id/imageZoomBottomSheetDialog"
        android:name="com.pedulinegeri.unjukrasa.ImageZoomBottomSheetDialog"
        android:label="ImageZoomBottomSheetDialog">
        <argument
            android:name="uri"
            app:argType="string" />
    </dialog>

    <action
        android:id="@+id/actionGlobalDemonstrationPageFragment"
        app:destination="@id/demonstrationPageFragment"
        app:enterAnim="@anim/from_right"
        app:exitAnim="@anim/wait_anim"
        app:popEnterAnim="@anim/wait_anim"
        app:popExitAnim="@anim/to_right" />

    <action
        android:id="@+id/actionGlobalImageZoomBottomSheetDialog"
        app:destination="@id/imageZoomBottomSheetDialog" />
    <fragment
        android:id="@+id/editDemonstrationPageFragment"
        android:name="com.pedulinegeri.unjukrasa.demonstration.EditDemonstrationPageFragment"
        android:label="EditDemonstrationPageFragment">
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>
</navigation>