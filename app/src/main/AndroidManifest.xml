<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.pedulinegeri.unjukrasa">

    <application
        android:name=".UnjukRasaApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UnjukRasa"
        tools:replace="android:theme">
        <activity
            android:name="com.pedulinegeri.unjukrasa.MainActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.pedulinegeri.unjukrasa.notification.NotificationPageActivity" />
        <activity android:name="com.pedulinegeri.unjukrasa.auth.SignUpPageActivity" />
        <activity
            android:name="com.pedulinegeri.unjukrasa.demonstration.DemonstrationPageActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name="com.pedulinegeri.unjukrasa.new_demonstration.NewDemonstrationPageActivity"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>